<h2>Edit your profile</h2>
<form action="/users" method="POST">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" name="name" id="name" value="{{ name }}">
    </div>
    <div class="form-group">
        <label for="race">Race:</label>
        <input type="text" class="form-control" name="race" id="race" value="{{ race }}">
    </div>
    <div class="form-group">
        <label for="family">Family:</label>
        <input type="text" class="form-control" name="family" id="family" value="{{ family }}">
    </div>
    <div class="form-group">
        <label for="food">Food:</label>
        <input type="text" class="form-control" name="food" id="food" value="{{ food }}">
    </div>
    <div class="form-group">
        <label for="age">Age:</label>
        <input type="number" class="form-control" name="age" id="age" value="{{ age }}">
    </div>
    <button class="btn btn-primary">Update</button>
</form>

<p><a href="/users/{{dinoname}}" target="_blank">View your profile</a></p>